<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/bg_cadavre"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="24">

        <Button
            android:id="@+id/jogoBId"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_medieval_nb"
            android:onClick="mainJogar"
            android:text="Play" />

        <Button
            android:id="@+id/menuOpcoesBId"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_medieval_nb"
            android:onClick="activityMenuOpcoes"
            android:text="options"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/regrasBId"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_medieval_nb"
            android:onClick="mainRegras"
            android:text="RULES" />

        <Button
            android:id="@+id/sairBId"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/button_medieval_nb"
            android:onClick="mainExit"
            android:text="QUIT" />

        <TextView
            android:id="@+id/nomeJogoTVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Cadavre Exquis"
            android:textSize="34sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>